@inject HttpClient Http

<div class="post">
    <h1>@_title</h1>
    <div class="post-meta">
        <span>@_created.ToString("yyyy-MM-dd")</span>
        @if (!string.IsNullOrWhiteSpace(_author))
        {
            <span> · @_author</span>
        }
    </div>
    <div class="post-content">@(new MarkupString(_markDownHtml))</div>
</div>
